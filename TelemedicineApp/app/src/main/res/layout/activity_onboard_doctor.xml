<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constrainLayout_onboardingScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    tools:context=".OnboardDoctorActivity">

    <LinearLayout
        android:id="@+id/linearLayout1_OnbordingScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView_DashboardScreen_PlainText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/DashboardScreen"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            />
<LinearLayout
    android:id="@+id/linearLayout2_OnboardingScreen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView_DrImage_OnboardDoctorActivity"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/baseline_person_pin_24"
            android:scaleType="fitXY"
            android:layout_gravity="start"
            />

        <ImageView
            android:id="@+id/imageView_sandvich_OnboardDoctorActivity"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/baseline_article_24"
            android:scaleType="fitXY"
            android:layout_marginLeft="230dp"

            />
</LinearLayout>

        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/recyclerView_AppintmentList_DashboardScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_appointment"
            >


        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>