<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    tools:context=".DisplayProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView_FullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_PhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_License"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="License: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_ClinicAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clinic Address: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_Specialization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specialization: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_UpdateProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/white"
            android:text="Update Profile"
            android:textColor="@color/teal_700"

             />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>